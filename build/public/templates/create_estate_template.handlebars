<div id="estate" class="row">
    <div class="center large-6 medium-8 small-12">
        <div class="form__container">
            <div class="form__title">ОБЯВЯВАНЕ ЗА ПРОДАЖБА</div>
            <div class="page__break"></div>
            <div id="form__register" class="form form__register">
                <label for="price" class="form__label">Цена на имота:</label>
                <input type="text" id="price" class="form__input form__input--text"/>
                <label for="image" class="form__label">Снимка на имота:</label>
                <input type="text" id="image" class="form__input form__input--text"/>

                <label for="info" class="form__label">Информация за имота:</label>
                <textarea name="info" id="info" class="form__input form__input--textarea"></textarea>

                <label for="type" class="form__label">Вид на имота:</label>
                <select id="type" class="form__input form__input--select">
                <option class="form__input--option">Апартамент</option>
                <option class="form__input--option">Къща</option>
                </select>
                <label for="location" class="form__label">Локация на имота:</label>
                <select id="location" class="form__input form__input--select">
                <option class="form__input--option">София</option>
                <option class="form__input--option">Пловдив</option>
                <option class="form__input--option">Бургас</option>
                <option class="form__input--option">Варна</option>
                <option class="form__input--option">Русе</option>
                <option class="form__input--option">Плевен</option>
                <option class="form__input--option">Провинция</option>
                <option class="form__input--option">В чужбина</option>
                </select>
                <input id="reg-submit" type="submit" value="Добави" class="form__input form__input--submit"/>
            </div>
        </div>
    </div>
</div>